.wrapper {
    background: #2B2A29;
    padding-top: 64px;
    padding-bottom: 64px;

    @media (max-width: 48em) {
        & {
            padding-top: 50px;
            padding-bottom: 50px;
        }
    }

    .container {
        .flex {
            .leftStack {
                gap: var(--mantine-spacing-xl);

                @media (max-width: 48em) {
                    & {
                        gap: var(--mantine-spacing-xs);
                    }
                }

                .logoImage {
                    width: 150px;
                }

                .copyrightStack {
                    .copyrightText {
                        font-weight: 400;
                        font-size: 14px;
                        line-height: 20px;
                        color: #F5F7FA;
                    }
                }

                .socialGroup {
                    gap: var(--mantine-spacing-md);

                    .socialActionIcon {
                        border-radius: var(--mantine-radius-lg);

                        .socialIcon {

                        }
                    }
                }
            }

            .rightStack {
                gap: var(--mantine-spacing-lg);

                .subscribeTitle {
                    font-weight: 600;
                    font-size: 20px;
                    line-height: 28px;
                    color: #FFFFFF;

                    @media (max-width: 48em) {
                        & {
                            font-size: 16px;
                            line-height: 24%;
                        }
                    }
                }

                .input {
                    border-radius: var(--mantine-radius-xl);
                }

                .inputStyle {
                    color: #fff;
                    background: #555;
                }

                .inputStyle::placeholder {
                    color: #D9DBE1;

                    @media (max-width: 48em) {
                        & {
                            font-size: 14px;
                        }
                    }
                }
            }
        }
    }
}
