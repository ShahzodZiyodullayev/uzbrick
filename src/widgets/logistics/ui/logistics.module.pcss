.wrapper {
    background: #ffffff;
    padding-top: 40px;
    padding-bottom: 100px;

    .container {
        .stack {
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;

            .sectionTitle {
                max-width: 540px;
                font-weight: 600;
                font-size: 36px;
                line-height: 44px;
                color: #4D4D4D;

                @media (max-width: 48em) {
                    & {
                        font-size: 32px;
                        line-height: 36px;
                    }
                }
            }

            .description {
                max-width: 630px;
                font-weight: 400;
                font-size: 16px;
                line-height: 24px;
                color: #717171;

                @media (max-width: 48em) {
                    & {
                        font-size: 14px;
                        line-height: 20px;
                    }
                }
            }

            .grid {
                .card {
                    background: #F5F7FA;

                    .cardTitle {
                        font-weight: 600;
                        font-size: 20px;
                        line-height: 28px;
                        color: #8C3B35;

                        @media (max-width: 48em) {
                            & {
                                font-size: 16px;
                                line-height: 24px;
                            }
                        }
                    }

                    .cardText {
                        margin-top: 10px;
                        font-weight: 600;
                        font-size: 14px;
                        line-height: 20px;
                        color: #717171;
                    }
                }
            }
        }
    }
}
